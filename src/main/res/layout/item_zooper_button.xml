<?xml version="1.0" encoding="utf-8"?>
<com.technologx.bluerain.views.BlueRainCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/zooper_btn_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:stateListAnimator="@anim/card_lift"
        app:cardPreventCornerOverlap="false"
        tools:ignore="UnusedAttribute">

    <LinearLayout
            style="@style/ZooperCardContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/md_listitem_height"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:ignore="UseCompoundDrawables">

        <ImageView
                android:id="@+id/zooper_btn_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                tools:ignore="ContentDescription"/>

        <TextView
                android:id="@+id/zooper_btn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:maxLines="1"
                android:ellipsize="end"/>

    </LinearLayout>

</com.technologx.bluerain.views.BlueRainCardView>